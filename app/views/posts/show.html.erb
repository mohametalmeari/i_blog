<h2>Post</h2>
<div class="post-container">
  <%= render partial: "shared/post", locals: { post: @post, user: @user} %>
  <% @comments.each do |comment|%>
    <% user = User.find(comment.author_id)%>
    <%= render partial: "shared/comment", locals: { comment: comment, user: user } %>
  <%end%>
</div>
<%= form_with model: @new_comment, url: create_comment_path do |form| %>
  <%= form.text_area :text, size: "70x5" %><br>
  <%= form.submit "Comment" %>
<% end %>
<br>
<%= form_with model: @new_like, url: create_like_path do |form| %>
  <%= form.submit "Like" %>
<% end %>
