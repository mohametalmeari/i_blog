<%= link_to user_path(13) do %>
  <div class="user-card">
    <img src="<%= user.photo %>" alt="User Photo" class="user-img">
    <section class="info">
      <h3 class="name"><%= user.name%></h3>
      <span class="posts-num">Number of posts: <%= user.posts_counter%></span>
    </section>
  </div>
<% end %>
